<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.empessoa8.carcare.fragments.abastecer.Frag_Abastecer">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/layout_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/titulo_abastecer"
                android:textColor="@color/color_texto_titulo"
                android:textSize="@dimen/texto_small"
                android:textStyle="bold|italic"
                tools:ignore="SmallSp" />

            <LinearLayout
                android:id="@+id/ln_radio_groups"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radio_group_combustivel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <RadioButton
                        android:id="@+id/rb_gas_comum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/rb_gas_comum"
                        android:textColor="@color/color_texto"
                        android:textSize="12sp"
                        android:textStyle="bold|italic"
                        tools:ignore="SmallSp" />

                    <RadioButton
                        android:id="@+id/rb_gas_adt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/rb_gas_adt"
                        android:textColor="@color/color_texto"
                        android:textSize="12sp"
                        android:textStyle="bold|italic"
                        tools:ignore="SmallSp" />

                    <RadioButton
                        android:id="@+id/rb_alcool"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/rb_alcool"
                        android:textColor="@color/color_texto"
                        android:textSize="12sp"
                        android:textStyle="bold|italic"
                        tools:ignore="SmallSp" />

                    <RadioButton
                        android:id="@+id/rb_gas_natural"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/rb_gas_natural"
                        android:textColor="@color/color_texto"
                        android:textSize="12sp"
                        android:textStyle="bold|italic"
                        tools:ignore="SmallSp" />

                    <RadioButton
                        android:id="@+id/rb_diesel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/rb_diesel"
                        android:textColor="@color/color_texto"
                        android:textSize="12sp"
                        android:textStyle="bold|italic"
                        tools:ignore="SmallSp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_titulos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/valor_abastecido"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="NestedWeights,SmallSp" />

                    <EditText
                        android:id="@+id/edt_valor_abastecido"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/km_atual"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="NestedWeights,SmallSp" />

                    <EditText
                        android:id="@+id/edt_km_atual"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="NestedWeights,SmallSp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/valor_litro"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="NestedWeights,SmallSp" />

                    <EditText
                        android:id="@+id/edt_valor_litro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/data_atual"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="NestedWeights,SmallSp" />

                    <EditText
                        android:id="@+id/edt_data_abastecimento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:inputType="date"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="NestedWeights,SmallSp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/titulo_calcular_combustivel"
                android:textColor="@color/color_texto_titulo"
                android:textSize="@dimen/texto_small"
                android:textStyle="bold|italic"
                tools:ignore="InefficientWeight,SmallSp" />

            <LinearLayout
                android:id="@+id/layout_opcao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/ln_alcool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/txt_alcool"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="SmallSp" />

                    <EditText
                        android:id="@+id/edt_alcool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_gasolina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/txt_gasolina"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="SmallSp" />

                    <EditText
                        android:id="@+id/edt_gasolina"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/color_texto"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold|italic"
                        tools:ignore="SmallSp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_calcular_abastecer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/color_botton"
                    android:text="@string/btn_calcular"
                    android:textColor="@color/color_botton_Text"
                    android:textSize="@dimen/texto_small"
                    android:textStyle="bold|italic"
                    tools:ignore="ButtonStyle,InefficientWeight,NestedWeights,SmallSp" />

                <Button
                    android:id="@+id/btn_salvar_abastecer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/color_botton"
                    android:text="@string/btn_salvar"
                    android:textColor="@color/color_botton_Text"
                    android:textSize="@dimen/texto_small"
                    android:textStyle="bold|italic"
                    tools:ignore="ButtonStyle,NestedWeights,RtlHardcoded,SmallSp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
